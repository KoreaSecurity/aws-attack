sudo dnf remove ruby 
sudo dnf install -y tar gcc make bzip2 zlib-devel nodejs
curl -L https://github.com/postmodern/ruby-install/archive/refs/tags/v0.9.3.tar.gz | tar xz
cd ruby-install-0.9.3
sudo make install

sudo ruby-install ruby 3.1.4
echo 'export PATH="/opt/rubies/ruby-3.1.4/bin:$HOME/.gem/bin:$PATH"' >> ~/.bash_profile
echo 'export GEM_HOME="$HOME/.gem"' >> ~/.bash_profile
echo 'export GEM_PATH="$GEM_HOME"' >> ~/.bash_profile
source ~/.bash_profile
hash -r

# Gem 설치

gem install bundler

# 버전 확인
ruby -v    
gem env    
