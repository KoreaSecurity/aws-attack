FROM ruby:2.7

RUN apt-get update -qq && apt-get install -y \
  build-essential \
  libpq-dev \
  libxml2-dev \
  libxslt1-dev \
  nodejs \
  sqlite3 \
  libsqlite3-dev \
  mariadb-client \
  libmariadb-dev \
  imagemagick \
  nginx \
  git \
  vim

RUN mkdir -p /var/www/aws-application
WORKDIR /var/www/aws-application

RUN gem install bundler:2.4.22

EXPOSE 3000
